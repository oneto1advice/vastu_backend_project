    "dev:users-service": "nodemon --exec ts-node src/users-service/index.ts",
    "start:users-service": "pm2 start --interpreter ts-node src/users-service/index.ts --name users-service",
    "start:products-service": "pm2 start --interpreter ts-node src/products-service/index.ts --name products-service",
    "start:ask-question-service": "pm2 start --interpreter ts-node src/ask-question-service/index.ts --name ask-question-service",
