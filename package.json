    "start:appointment-service": "pm2 start --interpreter ts-node src/appointment-service/index.ts --name appointment-service",
    "start": "npm run start:users-service && npm run start:products-service && npm run start:ask-question-service && npm run start:quote-service && npm run start:appointment-service",
    "restart": "npm stop --if-present && npm run start",
    "stop": "pm2 delete users-service || true && pm2 delete products-service || true && pm2 delete ask-question-service || true && pm2 delete quote-service || true && pm2 delete appointment-service || true"
  },
